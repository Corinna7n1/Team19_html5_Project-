.userinfo {  
  position: relative;  
  width: 750rpx;  
  height: 320rpx;  
  
  color: #fff;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  
.user-background {
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;

  z-index: -999;
}
.userinfo-avatar {  
  margin-top: 30px;
  overflow:hidden;  
  width: 150rpx;
  height: 150rpx; 
  left: 50%;  
  border-radius: 50%;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2); 
}  

.userinfo-nickname {
  
  font-size: 34rpx;
  font-family: SourceHanSansCN-Medium;
  color: #000000;
  margin-top: 10rpx;
}


.usermotto {
  margin-top: 200px;
}

.icon-img {
  width: 50rpx;
  height: 50rpx;
}

.wxapp-modal{
 width: 100%;
 height: 100%;
 position: fixed;
 top: 0px;
 left: 0px;
 z-index:999;
}